<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
    <span class="text-2xl font-semibold dark:text-white">@PageHeading</span>
    <div class="flex flex-col md:flex-row md:items-center gap-3">
        <button type="button" class="dark:bg-[#525252] dark:border-[#404040] dark:hover:border-[#e5e5e5] border-1 border-gray-300 hover:border-blue-600 bg-white px-4 py-2 rounded-lg font-medium text-gray-600 cursor-pointer group">
            <i class="bi @SecondaryButtonIcon text-lg text-gray-600 group-hover:text-blue-600 dark:group-hover:text-[#e5e5e5] dark:text-[#e5e5e5]"></i>
            <span class="group-hover:text-blue-600 dark:text-[#e5e5e5] dark:group-hover:text-[#e5e5e5]">@SecondaryButtonText</span>
        </button>
        <button @onclick="@(()=>PrimaryButtonAction.InvokeAsync())" type="button" class="bg-blue-500 hover:bg-blue-400 border-1 border-blue-500 text-white font-medium px-4 py-2 rounded-lg cursor-pointer">
            <i class="bi @PrimaryButtonIcon text-lg"></i>
            @PrimaryButtonText
        </button>
    </div>
</div>

@code {
    [Parameter] 
    public string PageHeading { get; set; } = "Users";

    [Parameter] 
    public string PrimaryButtonText { get; set; } = "Add New";

    [Parameter] 
    public string PrimaryButtonIcon { get; set; } = "bi-person-plus";

    [Parameter]
    public string SecondaryButtonText { get; set; } = "Download";

    [Parameter]
    public string SecondaryButtonIcon { get; set; } = "bi-cloud-arrow-down";

    [Parameter] 
    public EventCallback PrimaryButtonAction { get; set; }
    
    [Parameter]
    public EventCallback SecondaryButtonAction { get; set; }

}