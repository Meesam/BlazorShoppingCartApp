@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<div class=@(IsDarkMode ? "dark" :"light")>
    <div class="h-screen w-screen bg-[#f5f5f5] dark:bg-[#0a0a0a] overflow-auto">
        <div class="grid grid-rows-12 grid-cols-12 h-full">
            <header class="shadow col-start-1 lg:col-start-3 col-end-13 row-start-1 row-end-2">
                <AdminHeader isDarkMode="IsDarkMode" ToggelDarkMode="ToggelDarkMode"/>
            </header>
            <aside class="lg:border lg:border-[#e5e5e5] dark:border-[#404040] hidden lg:block lg:col-start-1 lg:col-end-3 lg:row-start-1 lg:row-end-13">
                <AdminSideBar/>
            </aside>
            <main class="col-start-1 lg:col-start-3 col-end-13 row-start-2 row-end-13 px-8 py-5 flex flex-col">
                <div class="grow">
                    @Body
                </div>
                <footer class="border border-[#e5e5e5] dark:border-[#404040]">Footer</footer>
            </main>
        </div>
    </div> 
</div>


@code{
    public bool IsDarkMode { get; set; } = false;

    private void ToggelDarkMode()
    {
        IsDarkMode = !IsDarkMode;
    }
}


