<div class="h-full w-full lg:grow bg-white rounded-2xl p-5 border border-[#e5e5e5] dark:border-[#404040] shadow-sm dark:bg-[#262626]">
    <div class="flex items-center gap-5 border-b border-b-[#e5e5e5] dark:border-b-[#404040]">
        <button type="button" @onclick="@(()=>TabSwitch("Billing"))" class="font-medium cursor-pointer  @(ActiveLink == "Billing" ? "text-blue-600 border-b-2  border-b-blue-600" :"text-gray-600 dark:text-white") py-3 px-4">Billing</button>
        <button type="button" @onclick="@(()=>TabSwitch("Activity"))" class="font-medium cursor-pointer @(ActiveLink == "Activity" ? "text-blue-600 border-b-2  border-b-blue-600" :"text-gray-600 dark:text-white") py-3 px-4">Activity</button>
    </div>
    <div class="p-3">
        @if (ActiveLink == "Billing")
        {
            <UserBillingDetails />
        }
        else
        {
            <UserHistory />
        }
    </div>
</div>

@code {
    string ActiveLink { get; set; } = "Billing";

    private void TabSwitch(string tab)
    {
        ActiveLink = tab;
    }
}