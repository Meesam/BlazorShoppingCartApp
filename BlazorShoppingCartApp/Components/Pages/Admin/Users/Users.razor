@page "/admin/Users/list"
<div class="h-full w-full overflow-auto bg-white dark:bg-[#262626] rounded-2xl border border-[#e5e5e5] dark:border-[#404040] px-5 py-8 flex flex-col gap-5">
    <PageHeader/>
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div class="grow">
            <InputText @bind-Value="Search" placeholder="Quick Search..." DisplayName="Search"
                       class="font-medium dark:text-[#a3a3a3] text-sm bg-[#f5f5f5] dark:border-none dark:bg-[#525252] p-3 rounded-lg outline-blue-600 w-full"/>
        </div>
        <button type="button"
                class="border-1 border-gray-300 dark:border-[#404040] hover:border-blue-600 dark:hover:border-[#e5e5e5] bg-white dark:bg-[#525252] dark:text-[#e5e5e5] px-4 py-[6px] rounded-lg font-medium text-gray-600 cursor-pointer group">
            <i class="bi bi-funnel text-lg text-gray-600 group-hover:text-blue-600 dark:text-[#e5e5e5] dark:group-hover:text-[#e5e5e5]"></i>
            <span class="group-hover:text-blue-600 dark:group-hover:text-[#e5e5e5]">Filter</span>
        </button>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
            <tr class="border-b border-b-[#e5e5e5] dark:border-b-[#525252]">
                <th class="text-left font-medium text-base text-gray-600 uppercase p-0">
                    <StyledCheckBox />
                </th>
                <th class="text-left font-medium text-base text-gray-600 uppercase dark:text-[#f5f5f5]">Name</th>
                <th class="text-left font-medium text-base text-gray-600 uppercase dark:text-[#f5f5f5]">Email</th>
                <th class="hidden md:table-cell text-left font-medium text-base text-gray-600 uppercase dark:text-[#f5f5f5]">Dob</th>
                <th class="hidden md:table-cell text-left font-medium text-base text-gray-600 uppercase dark:text-[#f5f5f5]">Phone</th>
                <th class="hidden md:table-cell text-left font-medium text-base text-gray-600 uppercase dark:text-[#f5f5f5]">Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach(var user in users)
            {
                <tr class="border-b border-b-[#e5e5e5] dark:border-b-[#525252] hover:bg-[#f5f5f5] dark:hover:bg-[#404040]">
                    <td class="p-0">
                        <StyledCheckBox/>
                    </td>
                    <td class="py-3 min-w-36">
                        <div class="flex items-center gap-4">
                            <img src="images/personFace.jpg" alt="Person" class="rounded-full h-10 w-10"/>
                            <a href="/admin/1/UserDetails" class="text-black text-base font-medium cursor-pointer hover:text-blue-600 dark:text-[#f5f5f5]">@user.UserName</a>
                        </div>
                    </td>
                    <td class="min-w-60"><span class="truncate dark:text-[#a3a3a3] text-gray-600">@user.NormalizedEmail</span></td>
                    <td class="hidden md:table-cell min-w-32 dark:text-[#a3a3a3] text-gray-600">@user.DateOfBirth</td>
                    <td class="hidden md:table-cell min-w-40 dark:text-[#a3a3a3] text-gray-600">@user.PhoneNumber</td>
                    <td class="hidden md:md:table-cell min-w-30">
                        <span class="py-1 px-3 @(user.Id =="Active" ? "bg-green-300" :"bg-red-300") rounded-md text-black text-sm font-medium">@user.Id</span>
                    </td>
                    <td>
                        <div class="flex items-center gap-3">
                            <i class="bi bi-pencil cursor-pointer dark:text-[#a3a3a3] text-gray-600"></i>
                            <i class="bi bi-trash3 text-red-500 cursor-pointer"></i>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
</div>

